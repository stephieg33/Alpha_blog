<div id="page-content">
<h1 class="text-center mt-4">Alpha Bloggers</h1>

<div class="flickr_pagination mb-4">
    <div class="page_info">
      <%= page_entries_info @user %>
    </div>
    <%= will_paginate @user, :container => false %>
  </div>
<div class="container">
<% @user.each do | user | %>
<div class="row justify-content-md-center">
    <div class="col-8 mt-4">
<div class="card text-center shadow-sm mb-5 bg-white rounded">
  <div class="card-header font-italic">
    <%= link_to user.username, user %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to gravatar_for(user, size: 150), user %></h5>
    <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
    <%= link_to 'View profile', user, class: "btn btn-success text-white" %>
    <%= link_to 'Edit profile', edit_user_path(user), class: "btn btn-primary text-white" %>
    <%= link_to 'Delete profile', user_path(user), method: :delete, class: "btn btn-danger text-white" %>
  </div>
  <div class="card-footer text-muted">
    <small>Joined <%= time_ago_in_words(user.created_at)%> ago </small>
  </div>
</div>
</div>
</div>
<% end %>


</div>