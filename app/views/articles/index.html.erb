<h1 class="text-center mt-4">Article listing page</h1>
<div class="container">
<% @articles.each do | article | %>
<div class="row justify-content-md-center">
    <div class="col-8 mt-4">
<div class="card text-center shadow-sm mb-5 bg-white rounded">
  <div class="card-header font-italic">
    by <%= article.user.username %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= link_to article.title, article_path(article), class:"text-success" %></h5>
    <p class="card-text"><%= truncate(article.description, length:100) %></p>
    <%= link_to 'View', article_path(article), class: "btn btn-success text-white" %>
    <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary text-white" %>
    <%= link_to 'Delete', article_path(article), method: :delete, class: "btn btn-danger text-white" %>
  </div>
  <div class="card-footer text-muted">
    <small>Created <%= time_ago_in_words(article.created_at)%> ago, Edited <%= time_ago_in_words(article.updated_at)%> ago</small>
  </div>
</div>
</div>
</div>
<% end %>